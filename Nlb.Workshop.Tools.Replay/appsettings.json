{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning"
    }
  },
  "ConnectionStrings": {
    "ReadModel": "Data Source=../nlb-workshop.db"
  },
  "Messaging": {
    "Provider": "EventHubs",
    "Serialization": {
      "DefaultFormat": "json"
    },
    "EventHubs": {
      "ConnectionString": "Endpoint=sb://localhost/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=SAS_KEY_VALUE;UseDevelopmentEmulator=true;",
      "EventHubName": "orders",
      "ConsumerGroup": "projection",
      "ReplayConsumerGroup": "replay",
      "CheckpointBlobConnectionString": "UseDevelopmentStorage=true",
      "CheckpointContainerName": "checkpoints"
    },
    "Kafka": {
      "BootstrapServers": "localhost:9092",
      "Topic": "orders",
      "ConsumerGroup": "projection",
      "ReplayConsumerGroup": "replay",
      "SecurityProtocol": "SaslPlaintext",
      "SaslMechanism": "Plain",
      "SaslUsername": "$ConnectionString",
      "SaslPassword": "Endpoint=sb://localhost/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=SAS_KEY_VALUE;UseDevelopmentEmulator=true;"
    },
    "Replay": {
      "MaximumWaitTimeSeconds": 2,
      "ConsecutiveEmptyReadsToStop": 3
    }
  }
}
